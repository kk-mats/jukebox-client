{
	"compilerOptions": {
		"target": "es5",
		"jsx": "react",
		"lib": ["es5", "dom"],
		"moduleResolution": "node",
		"removeComments": true,
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "."
	},
	"include": [
		"src/**/*.tsx",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}